{
  "name": "@rockstarpabitra/colorify",
  "version": "2.0.0",
  "description": "Tiny color converter: hex ↔ rgb ↔ hsl (with alpha), zero deps.",
  "keywords": ["color", "hex", "rgb", "hsl", "converter", "tiny"],
  "license": "MIT",
  "author": "Pabitra Banerjee",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsc && node scripts/cjs-wrap.mjs",
    "test": "vitest run",
    "dev:test": "vitest",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}